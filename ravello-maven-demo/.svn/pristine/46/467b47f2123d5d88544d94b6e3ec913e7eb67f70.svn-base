<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.ravello.maven.demo</groupId>
		<artifactId>ravello-maven-demo</artifactId>
		<version>1.0</version>
	</parent>

	<groupId>com.ravello.maven.demo.webapp</groupId>
	<artifactId>ravello-maven-demo-webapp</artifactId>
	<packaging>war</packaging>

	<dependencies>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>5.1.26</version>
		</dependency>
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-web-api</artifactId>
			<version>6.0</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>com.ravello.plugins</groupId>
				<artifactId>ravello-maven-plugin</artifactId>
				<version>0.1.BETA</version>
				<executions>
					<execution>
						<phase>compile</phase>
						<goals>
							<goal>inject-properties</goal>
						</goals>
						<configuration>
							<propertiesFileName>app-properties</propertiesFileName>
							<propertiesMap>
								<db.server.url>db</db.server.url>
							</propertiesMap>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>com.ravello.maven.demo.application</groupId>
						<artifactId>ravello-app-maven-demo-application</artifactId>
						<version>1.0</version>
						<classifier>14</classifier>
						<type>zip</type>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.0.1</version>
				<executions>
					<execution>
						<id>prepare-war</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>exploded</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>replacer</artifactId>
				<version>1.5.2</version>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>replace</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<file>target/${project.artifactId}-${parent.version}/WEB-INF/web.xml</file>
					<replacements>
						<replacement>
							<token>@db.server.url</token>
							<value>${db.server.url}</value>
						</replacement>
					</replacements>
				</configuration>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>com.ravello.plugins</groupId>
										<artifactId>ravello-maven-plugin</artifactId>
										<versionRange>0.1.BETA,)</versionRange>
										<goals>
											<goal>
												inject-properties
											</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<repositories>
		<repository>
			<id>java.net2</id>
			<name>Repository hosting the jee6 artifacts</name>
			<url>http://download.java.net/maven/2</url>
		</repository>
	</repositories>

</project>